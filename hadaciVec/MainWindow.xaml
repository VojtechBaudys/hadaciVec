<Window x:Class="hadaciVec.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:hadaciVec"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Label x:Name="MathProblem" HorizontalAlignment="Center" VerticalAlignment="Top" Padding="60" FontSize="30">1 + 1 = ?</Label>
        <Button 
            x:Name="LeftButton"
            FontSize="20"
            Padding="10, 5"
            Margin="-300, 0, 0, 0"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Content="1"
            Click="LeftButton_OnClick"    
        />
        <Button
            x:Name="MiddleButton"
            FontSize="20"
            Padding="10, 5"
            Margin="0"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Content="2"
            Click=""    
        />
        <Button 
            x:Name="RightButton"
            FontSize="20"
            Padding="10, 5"
            Margin="300,0, 0, 0"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Content="3"
            Click=""
        />    
    </Grid>
</Window>
